{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES5",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
